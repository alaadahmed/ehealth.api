{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "date": {
      "type": "string",
      "pattern": "^(\\d{4}(?!\\d{2}\\b))((-)((0[1-9]|1[0-2])(\\3([12]\\d|0[1-9]|3[01]))|(00[1-9]|0[1-9]\\d|[12]\\d{2}|3([0-5]\\d|6[1-6]))))$"
    },
    "uuid": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{4}(-?)[0-9a-f]{12}$"
    },
    "simple_quantity": {
      "type": "object",
      "properties": {
        "value": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "description": "Dictionary: TBD"
        },
        "system": {
          "type": "string",
          "description": "Dictionary: TBD"
        },
        "code": {
          "type": "string",
          "description": "Dictionary: TBD"
        }
      },
      "required": [
        "value",
        "unit"
      ],
      "additionalProperties": false
    },
    "range": {
      "type": "object",
      "properties": {
        "low": {
          "$ref": "#/definitions/simple_quantity"
        },
        "high": {
          "$ref": "#/definitions/simple_quantity"
        }
      },
      "required": [
        "low",
        "high"
      ],
      "additionalProperties": false
    },
    "dosage": {
      "type": "object",
      "properties": {
        "sequence": {
          "type": "integer",
          "minimum": 0,
          "exclusiveMinimum": true,
          "description": "The order of the dosage instructions"
        },
        "text": {
          "type": "string",
          "description": "Free text dosage instructions e.g. SIG"
        },
        "additional_instruction": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "coding": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "system": {
                      "type": "string",
                      "enum": [
                        "eHealth/SNOMED/additional_dosage_instructions"
                      ]
                    },
                    "code": {
                      "type": "string",
                      "minLength": 1,
                      "description": "Symbol in syntax defined by the system"
                    }
                  },
                  "required": [
                    "code",
                    "system"
                  ],
                  "additionalProperties": false
                }
              },
              "text": {
                "type": "string"
              }
            },
            "required": [
              "coding"
            ],
            "additionalProperties": false
          }
        },
        "patient_instruction": {
          "type": "string",
          "minLength": 1,
          "description": "Patient or consumer oriented instructions"
        },
        "timing": {
          "type": "object",
          "properties": {
            "event": {
              "type": "array",
              "items": {
                "type": "string",
                "format": "date-time",
                "description": "When the event occurs. ISO 8601 date and time in UTC timezone."
              }
            },
            "repeat": {
              "type": "object",
              "properties": {
                "count": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Number of times to repeat"
                },
                "count_max": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Maximum number of times to repeat"
                },
                "duration": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "How long when it happens"
                },
                "duration_max": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "How long when it happens Max"
                },
                "duration_unit": {
                  "type": "string",
                  "enum": [
                    "s",
                    "min",
                    "h",
                    "d",
                    "wk",
                    "mo",
                    "a"
                  ],
                  "description": "Dictionary UNITS_OF_TIME"
                },
                "frequency": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Event occurs frequency times per period"
                },
                "frequency_max": {
                  "type": "integer",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Event occurs up to frequencyMax times per period"
                },
                "period": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Event occurs frequency times per period"
                },
                "period_max": {
                  "type": "number",
                  "minimum": 0,
                  "exclusiveMinimum": true,
                  "description": "Upper limit of period"
                },
                "period_unit": {
                  "type": "string",
                  "enum": [
                    "s",
                    "min",
                    "h",
                    "d",
                    "wk",
                    "mo",
                    "a"
                  ],
                  "description": "Dictionary UNITS_OF_TIME"
                },
                "day_of_week": {
                  "type": "array",
                  "description": "day of week. Dictionary DAYS_OF_WEEK",
                  "items": {
                    "type": "string",
                    "enum": [
                      "mon",
                      "tue",
                      "wed",
                      "thu",
                      "fri",
                      "sat",
                      "sun"
                    ]
                  }
                },
                "time_of_day": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "date-time",
                    "description": "Time of day for action"
                  }
                },
                "when": {
                  "type": "array",
                  "description": "Regular life events the event is tied to",
                  "items": {
                    "type": "string",
                    "description": "Dictionary EVENT_TIMING"
                  }
                },
                "offset": {
                  "type": "integer",
                  "description": "Minutes from event before or after"
                }
              },
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "bounds_duration": {
                      "$ref": "#/definitions/simple_quantity"
                    }
                  },
                  "required": [
                    "bounds_duration"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "bounds_range": {
                      "$ref": "#/definitions/range"
                    }
                  },
                  "required": [
                    "bounds_range"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "bounds_period": {
                      "type": "object",
                      "properties": {
                        "start": {
                          "type": "string",
                          "format": "date-time",
                          "description": "C? Starting time with inclusive boundary"
                        },
                        "end": {
                          "type": "string",
                          "format": "date-time",
                          "description": "C? End time with inclusive boundary, if not ongoing"
                        }
                      },
                      "required": [
                        "start",
                        "end"
                      ]
                    }
                  },
                  "required": [
                    "bounds_period"
                  ]
                }
              ]
            },
            "code": {
              "type": "object",
              "properties": {
                "coding": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "properties": {
                      "system": {
                        "type": "string",
                        "description": "Dictionary TIMING_ABBREVIATION"
                      },
                      "code": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Symbol in syntax defined by the system"
                      }
                    },
                    "required": [
                      "code",
                      "system"
                    ],
                    "additionalProperties": false
                  }
                },
                "text": {
                  "type": "string"
                }
              },
              "required": [
                "coding"
              ],
              "additionalProperties": false
            }
          }
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "person_id": {
      "$ref": "#/definitions/uuid",
      "description": "Person identifier"
    },
    "employee_id": {
      "$ref": "#/definitions/uuid",
      "description": "Employee ID with `type=DOCTOR` who issued Medication Request."
    },
    "division_id": {
      "$ref": "#/definitions/uuid",
      "description": "Division identifier"
    },
    "created_at": {
      "$ref": "#/definitions/date",
      "description": "Medication request creation date, which is determined by the external system. Format DATE '2017-09-07'"
    },
    "started_at": {
      "$ref": "#/definitions/date",
      "description": "Start date of a treatment period, which is determined by the external system. Greater or equal to created_at. Format DATE '2017-09-07'"
    },
    "ended_at": {
      "$ref": "#/definitions/date",
      "description": "End date of a treatment period, which is determined by the external system. Greater or equal to started_at. Format DATE '2017-10-07'"
    },
    "medication_id": {
      "$ref": "#/definitions/uuid",
      "description": "Medication identified"
    },
    "medication_qty": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "description": "Medication quantity isuued by the doctor"
    },
    "medical_program_id": {
      "$ref": "#/definitions/uuid",
      "description": "Medical program identifier"
    },
    "intent": {
      "type": "string",
      "enum": [
        "order"
      ],
      "description": "Represents the medication request purpose. Dictionary MEDICATION_REQUEST_INTENT"
    },
    "category": {
      "type": "string",
      "enum": [
        "community"
      ],
      "description": "Type of medication usage. Dictionary MEDICATION_REQUEST_CATEGORY"
    },
    "context": {
      "type": "object",
      "properties": {
        "identifier": {
          "type": "object",
          "properties": {
            "type": {
              "type": "object",
              "properties": {
                "coding": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "properties": {
                      "system": {
                        "type": "string",
                        "enum": [
                          "eHealth/resources"
                        ]
                      },
                      "code": {
                        "type": "string",
                        "enum": [
                          "encounter"
                        ],
                        "description": "Symbol in syntax defined by the system"
                      }
                    },
                    "required": [
                      "code",
                      "system"
                    ],
                    "additionalProperties": false
                  }
                },
                "text": {
                  "type": "string"
                }
              },
              "required": [
                "coding"
              ],
              "additionalProperties": false
            },
            "value": {
              "type": "string",
              "description": "The value that is unique"
            }
          },
          "required": [
            "value"
          ],
          "additionalProperties": false
        }
      }
    },
    "dosage_instruction": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/dosage"
      }
    }
  },
  "required": [
    "person_id",
    "employee_id",
    "division_id",
    "created_at",
    "started_at",
    "ended_at",
    "medication_id",
    "medication_qty",
    "medical_program_id",
    "intent",
    "category"
  ],
  "additionalProperties": false
}
